@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.TeamMember)Model.Content;
}

<div class="teamMemberCard">
    @if (content.TeamMemberImage != null)
    {
        <img src="@content.TeamMemberImage.Url()" alt="@content.TeamMemberName"/>
    }
    <div class="aboutMember">
        <h4 class="memberName">@content.TeamMemberName</h4>
        <p class="memberRole">@content.TeamMemberRole</p>
    </div>
</div>