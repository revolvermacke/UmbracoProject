@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var rootContent = Umbraco.ContentAtRoot();
    var siteSettings = rootContent.OfType<SiteSettings>().FirstOrDefault();

    var contactAddress = siteSettings?.ContactAddress ?? "No address provided...";
}

<div class="topBarSection">
    <div class="container topBarFlex">

        <p class="topBarAddress">@contactAddress</p>

        <div class="topBarSocialLinks">
            @if (siteSettings?.PlatformList != null)
            {
                foreach(var item in siteSettings.PlatformList)
                {
                    if (item.Content is SocialMediaItem mediaItem)
                    {
                        switch (mediaItem.PlatformName.ToLower())
                        {
                            case "facebook":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" class="socialMediaLinks">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                break;

                            case "x":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" class="socialMediaLinks">
                                    <i class="fa-brands fa-x-twitter"></i>
                                </a>
                                break;

                            case "linkedin":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" class="socialMediaLinks">
                                    <i class="fa-brands fa-linkedin"></i>
                                </a>
                                break;
                        }
                    }
                }
            }
        </div>
    </div>
</div>