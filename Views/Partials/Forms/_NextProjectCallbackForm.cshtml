@using UmbracoProjectMax.ViewModels
@model CallbackFormViewModel

@using (Html.BeginUmbracoForm("HandleCallbackForm", "Form", FormMethod.Post, new { novalidate = "novalidate", id = "callbackForm" }))
{
    <div class="NextcallbackFormInput">

        <div>
            @* <label asp-for="Name"></label> *@
            <input asp-for="Name" type="text" placeholder="@Html.DisplayNameFor(x => x.Name)" class="NextcallbackInput" />
            <span asp-validation-for="Name"></span>
        </div>

        <div>
            @* <label asp-for="Email"></label> *@
            <input asp-for="Email" type="text" placeholder="@Html.DisplayNameFor(x => x.Email)" class="NextcallbackInput" />
            <span asp-validation-for="Email"></span>
        </div>

        <div>
            @* <label asp-for="Phone"></label> *@
            <input asp-for="Phone" type="text" placeholder="@Html.DisplayNameFor(x => x.Phone)" class="NextcallbackInput" />
            <span asp-validation-for="Phone"></span>
        </div>

        <div>
            @* <label asp-for="SelectedOption"></label> *@

            <div class="optionInFormNext">
                <select asp-for="SelectedOption" class="selectOptionFormNext">

                    <option value="" disabled hidden selected>Please select an option</option>
                    @foreach (var o in Model.Options)
                    {
                        <option value="@o">@o</option>
                    }
                </select>

                <span class="inFormArrow">
                    <svg xmlns="http://www.w3.org/2000/svg" class="arrow-icon" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                    </svg>
                </span>

            </div>

            <span asp-validation-for="SelectedOption"></span>

        </div>

    </div>

    <div class="submitButtonLast">
        <button type="submit" class="form-btn-last">Submit</button>
    </div>
}